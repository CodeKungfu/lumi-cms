{
  "name": "lumi-cms-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Nest Prisma Monorepo",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:gen": "pnpm --filter @repo/database db:gen",
    "db:pull": "pnpm --filter @repo/database db:pull"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "prettier": "^3.0.0",
    "turbo": "latest",
    "wait-on": "^9.0.3",
    "wrangler": "^4.62.0"
  },
  "packageManager": "pnpm@8.10.0",
  "dependencies": {
    "cron-parser": "^5.0.6",
    "cross-env": "^7.0.3",
    "lodash": "^4.17.21",
    "socket.io": "^4.8.1"
  }
}